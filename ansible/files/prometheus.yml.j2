global:
  scrape_interval: 15s

scrape_configs:
  - job_name: 'management'
    static_configs:
      - targets:
        {% for host in groups['management'] %}
        - "{{ host }}:9100"
        {% endfor %}

  - job_name: 'workers'
    static_configs:
      - targets:
        {% for host in groups['workers'] %}
        - "{{ host }}:9100"
        {% endfor %}
